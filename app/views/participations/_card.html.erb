<div class="card mb-3">
  <h2 class="card-header h4">
    Participation #<%= participation.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @participation.user.present? %>
          <%= link_to participation.user, participation.user %>
        <% end %>
      </dd>

      <dt>Challenge</dt>
      <dd>
        <% if @participation.challenge.present? %>
          <%= link_to participation.challenge, participation.challenge %>
        <% end %>
      </dd>

      <dt>Team</dt>
      <dd>
        <% if @participation.team.present? %>
          <%= link_to participation.team, participation.team %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back participation, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_participation_url(participation), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to participation, method: :delete, data: { confirm: "Do you really want to delete this participation?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(participation.updated_at) %> ago
  </div>
</div>
