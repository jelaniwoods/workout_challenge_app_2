<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Participations

    <a data-toggle="collapse" href="#team_participations_new_form">
      Add participation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @team.participations.each do |participation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to participation, participation %>

        <%= link_to participation, method: :delete, data: { confirm: "Do you really want to delete this participation" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="team_participations_new_form">
        <%= render partial: "teams/team_participations_new_form" %>
      </div>
    </div>

  </ul>
</div>
