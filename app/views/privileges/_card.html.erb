<div class="card mb-3">
  <h2 class="card-header h4">
    Privilege #<%= privilege.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Challenge</dt>
      <dd>
        <% if @privilege.challenge.present? %>
          <%= link_to privilege.challenge, privilege.challenge %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @privilege.user.present? %>
          <%= link_to privilege.user, privilege.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back privilege, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @privilege.user %>
          <%= link_to edit_privilege_url(privilege), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @privilege.user %>
          <%= link_to privilege, method: :delete, data: { confirm: "Do you really want to delete this privilege?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(privilege.updated_at) %> ago
  </div>
</div>
