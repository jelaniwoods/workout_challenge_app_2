<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Teams

    <a data-toggle="collapse" href="#challenge_teams_new_form">
      Add team
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @challenge.teams.each do |team| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to team, team %>

        <%= link_to team, method: :delete, data: { confirm: "Do you really want to delete this team" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="challenge_teams_new_form">
        <%= render partial: "challenges/challenge_teams_new_form" %>
      </div>
    </div>

  </ul>
</div>
