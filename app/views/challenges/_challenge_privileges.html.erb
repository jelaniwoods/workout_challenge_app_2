<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Privileges

    <a data-toggle="collapse" href="#challenge_privileges_new_form">
      Add privilege
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @challenge.privileges.each do |privilege| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to privilege, privilege %>

        <% if current_user == privilege.user %>
          <%= link_to privilege, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="challenge_privileges_new_form">
        <%= render partial: "challenges/challenge_privileges_new_form" %>
      </div>
    </div>

  </ul>
</div>
