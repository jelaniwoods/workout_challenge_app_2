<%= search_form_for @q, :class => collapse_search_form, :id => "photoworkouts_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :caption_cont, "Caption contains" %>
    <%= f.text_field :caption_cont, :class => "form-control", :placeholder => "Caption contains" %>
  </div>

  <div class="form-group">
    <%= f.label :main_exercise_cont, "Main exercise contains" %>
    <%= f.text_field :main_exercise_cont, :class => "form-control", :placeholder => "Main exercise contains" %>
  </div>

  <div class="form-group">
    <%= f.label :calories, "Calories" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :calories_gteq, :class => "form-control", :placeholder => "Calories greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :calories_lteq, :class => "form-control", :placeholder => "Calories less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :likes_count, "Likes count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :likes_count_gteq, :class => "form-control", :placeholder => "Likes count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :likes_count_lteq, :class => "form-control", :placeholder => "Likes count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :starting_time, "Challenge Starting time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='challengegteqstarting_timePicker' data-target-input="nearest">
          <%= f.text_field :challenge_starting_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Challenge Starting time greater than or equal to", :data => {:target => '#challengegteqstarting_timePicker'} %>
          <div class="input-group-append" data-target='#challengegteqstarting_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='challengelteqstarting_timePicker' data-target-input="nearest">
          <%= f.text_field :challenge_starting_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Challenge Starting time less than or equal to", :data => {:target => '#challengelteqstarting_timePicker'} %>
          <div class="input-group-append" data-target='#challengelteqstarting_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#challengegteqstarting_timePicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#challengelteqstarting_timePicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#challengegteqstarting_timePicker').on("dp.change", function (e) {
              $('#challengelteqstarting_timePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#challengelteqstarting_timePicker').on("dp.change", function (e) {
              $('#challengegteqstarting_timePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/photoworkouts" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#photoworkouts_filters">
  Show filters
</a>
