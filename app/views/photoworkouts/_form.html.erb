<% was_validated = photoworkout.errors.any? %>

<%= form_with(model: photoworkout, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% caption_class = "form-control" %>
    <% caption_was_invalid = photoworkout.errors.include?(:caption) %>

    <% if was_validated %>
      <% if caption_was_invalid %>
        <% caption_class << " is-invalid" %>
      <% else %>
        <% caption_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :caption %>
    <%= f.text_area :caption, class: caption_class, placeholder: "Enter caption" %>
    <% if caption_was_invalid %>
      <% photoworkout.errors.full_messages_for(:caption).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% challenge_class = "form-control" %>
    <% challenge_was_invalid = photoworkout.errors.include?(:challenge) %>

    <% if was_validated %>
      <% if challenge_was_invalid %>
        <% challenge_class << " is-invalid" %>
      <% else %>
        <% challenge_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :challenge_id %>
    <%= f.collection_select :challenge_id, Challenge.all, :id, :to_s, {}, class: "form-control" %>
    <% if challenge_was_invalid %>
      <% photoworkout.errors.full_messages_for(:challenge).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
