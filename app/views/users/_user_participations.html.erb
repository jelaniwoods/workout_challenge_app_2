<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Participations

    <a data-toggle="collapse" href="#user_participations_new_form">
      Add participation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.participations.each do |participation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to participation, participation %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_participations_new_form">
        <%= render partial: "users/user_participations_new_form" %>
      </div>
    </div>

  </ul>
</div>
