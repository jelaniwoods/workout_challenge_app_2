<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Privileges

    <a data-toggle="collapse" href="#user_privileges_new_form">
      Add privilege
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.privileges.each do |privilege| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to privilege, privilege %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_privileges_new_form">
        <%= render partial: "users/user_privileges_new_form" %>
      </div>
    </div>

  </ul>
</div>
