<%= form_with(model: @photoworkout, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :challenge_id %>

    <%= f.collection_select :challenge_id, Challenge.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :likes_count %>

    <%= f.text_field :likes_count, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo_locator %>

    <%= f.file_field :photo_locator, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :calories %>

    <%= f.text_field :calories, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :main_exercise %>

    <%= f.text_field :main_exercise, class: "form-control" %>
  </div>

  <%= f.submit "Create photoworkout", class: "btn btn-block btn-outline-secondary" %>
<% end %>
