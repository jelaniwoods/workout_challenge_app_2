<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { novalidate: true, class: "mb-3", multipart: true } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <!-- Devise Input for is_premium start -->
          <div class="form-group">
            <% is_premium_was_invalid = resource.errors.include?(:is_premium) %>

            <% is_premium_class = "form-control" %>

            <% if was_validated %>
              <% if is_premium_was_invalid %>
                <% is_premium_class << " is-invalid" %>
              <% else %>
                <% is_premium_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :is_premium %>

            <%= f.check_box :is_premium, class: "#{is_premium_class} col-sm-2" %>

            <% if is_premium_was_invalid %>
              <% resource.errors.full_messages_for(:is_premium).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for is_premium end -->

          <!-- Devise Input for profile_picture start -->
          <div class="form-group">
            <% profile_picture_was_invalid = resource.errors.include?(:profile_picture) %>

            <% profile_picture_class = "form-control" %>

            <% if was_validated %>
              <% if profile_picture_was_invalid %>
                <% profile_picture_class << " is-invalid" %>
              <% else %>
                <% profile_picture_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :profile_picture %>

            <%= f.file_field :profile_picture, :class => profile_picture_class %>

            <% if profile_picture_was_invalid %>
              <% resource.errors.full_messages_for(:profile_picture).each do |message| %>
                <div class="invalid-feedback">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for profile_picture end -->

          <!-- Devise Input for bio start -->
          <div class="form-group">
            <% bio_was_invalid = resource.errors.include?(:bio) %>

            <% bio_class = "form-control" %>

            <% if was_validated %>
              <% if bio_was_invalid %>
                <% bio_class << " is-invalid" %>
              <% else %>
                <% bio_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :bio %>

            <%= f.text_area :bio, :class => bio_class, :placeholder => "Enter bio" %>

            <% if bio_was_invalid %>
              <% resource.errors.full_messages_for(:bio).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for bio end -->

          <!-- Devise Input for username start -->
          <div class="form-group">
            <% username_was_invalid = resource.errors.include?(:username) %>

            <% username_class = "form-control" %>

            <% if was_validated %>
              <% if username_was_invalid %>
                <% username_class << " is-invalid" %>
              <% else %>
                <% username_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :username %>

            <%= f.text_field :username, :class => username_class, :placeholder => "Enter username" %>

            <% if username_was_invalid %>
              <% resource.errors.full_messages_for(:username).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for username end -->
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
