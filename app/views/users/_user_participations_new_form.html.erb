<%= form_with(model: @participation, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :challenge_id %>

    <%= f.collection_select :challenge_id, Challenge.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :team_id %>

    <%= f.collection_select :team_id, Team.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create participation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
